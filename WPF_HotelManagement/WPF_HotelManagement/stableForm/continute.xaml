        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_HotelManagement"
        mc:Ignorable="d"
        Title="continute" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="98*"/>
        </Grid.RowDefinitions>
        <Label Content="wanna keep going ?" HorizontalAlignment="Left" Margin="71.999,26.332,0,0" VerticalAlignment="Top" Width="245.326" FontWeight="Bold" FontSize="24"/>
        <Rectangle x:Name="YES" Fill="#FFA5EA60" HorizontalAlignment="Left" Height="34.666" Margin="45.333,44.405,0,0" Stroke="Black" VerticalAlignment="Top" Width="128.667" Grid.Row="1"/>
