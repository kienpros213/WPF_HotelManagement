        <Label x:Name="YES_LABEL" Content="YES!!" HorizontalAlignment="Left" Margin="90.666,49.109,0,0" VerticalAlignment="Top" Width="35.993" FontWeight="Bold" Grid.Row="1"/>
        <Label x:Name="NO_LABEL" Content="NAH" HorizontalAlignment="Left" Margin="278.664,49.109,0,0" VerticalAlignment="Top" Width="35.993" FontWeight="Bold" Grid.Row="1"/>
        <Rectangle x:Name="YES_TOP" Fill="#FFA5EA60" HorizontalAlignment="Left" Height="34.666" Margin="45.333,44.405,0,0" Stroke="Black" VerticalAlignment="Top" Width="128.667" Opacity="0" MouseDown="YES_TOP_MouseDown" Grid.Row="1"/>
        <Rectangle x:Name="NO_TOP" Fill="#FFA5EA60" HorizontalAlignment="Left" Height="34.666" Margin="230,44.405,0,0" Stroke="Black" VerticalAlignment="Top" Width="128.667" Opacity="0" MouseDown="NO_TOP_MouseDown" Grid.Row="1"/>
    </Grid>
</Window>
